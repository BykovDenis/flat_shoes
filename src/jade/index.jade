                                                div.cart-single__size 
                                                    img(src="img/img_size.jpg" width="50" height="50" alt="flat shoes")
                                                div.cart-single__column
                                                    div.cart-single__header flat shoes
                                                    div.cart-single__price $189.00
                                                div.cart__close
                                                    a(href="#" alt="close")
                                                        i.icon-close
                                    div.cart__right.clearfix
                                        a(href="#")
                                            div.cart-single__size 
                                                img(src="img/img_size.jpg" width="50" height="50" alt="flat shoes")
                                            div.cart-single__column
                                                div.cart-single__header hot pants
                                                div.cart-single__price $156.00
                                            div.cart__close
                                                a(href="#" alt="close")
                                                    i.icon-close
                                div.cart__items.clearfix
                                    div.cart__show-all SHOW ALL PRODUCTS
                                        i.icon-plus
                                    div.cart__check-out CHECK OUT
                                        i.icon-checkout                                
                    nav.categories.clearfix 
                       -cats = ["JACKETS", "SWEATERS", "DRESSES", "SKIRTS", "PANTS", "SHORTS", "SHOES", "ACCESSORIES"]                    
                       ul
                           each cat in cats
                               li #{cat}
