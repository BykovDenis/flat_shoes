        <link href='https://fonts.googleapis.com/css?family=Josefin+Sans:400,600,700' rel='stylesheet' type='text/css'>
    body
        
        div.top.clearfix
            div.layout
            
                div.top__left 
                    ul
                        li 
                            a(href="#") ENG
                        li 
                            a(href="#") IND
                div.top__right
                    ul
                        li 
                            a(href="#") USD
                        li 
                            a(href="#") IDR
        header.header.clearfix
            div.layout
                div.logo 
                    h1.logo__header Your Logo
                    h1.logo__content ecommerce
                    div.logo__line
                    div.logo__line
                    div.logo__line
                    div.logo__line
